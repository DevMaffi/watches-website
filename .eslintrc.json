/* 
  Rules configuring:
  error or 2
  warn or 1
  off or 0
*/

{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "ignorePatterns": [
    "/build",
    "/config",
    "/dist",
    "gulpfile.js",
    "/node_modules",
    "webpack.config.js"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "babelOptions": {
      "configFile": "./.babelrc.json"
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": 0,
    "arrow-parens": 0,
    "block-spacing": 0,
    "brace-style": 0,
    "class-methods-use-this": 0,
    "comma-dangle": 0,
    "comma-spacing": 0,
    "comma-style": 0,
    "curly": 0,
    "default-case": 1,
    "dot-location": 0,
    "eol-last": 0,
    "func-names": 0,
    "function-paren-newline": 0,
    "implicit-arrow-linebreak": 0,
    "import/extensions": 0,
    "import/newline-after-import": 1,
    "import/no-duplicates": 1,
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "indent": 0,
    "keyword-spacing": 0,
    "linebreak-style": 0,
    "lines-between-class-members": 0,
    "max-len": 0,
    "no-confusing-arrow": 0,
    "no-console": 0,
    "no-duplicate-case": 1,
    "no-empty": 1,
    "no-extra-semi": 0,
    "no-mixed-operators": 0,
    "no-multi-spaces": 0,
    "no-multiple-empty-lines": 0,
    "no-new": 0,
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "no-shadow": 1,
    "no-trailing-spaces": 0,
    "no-unused-expressions": 1,
    "no-unused-vars": 1,
    "no-useless-constructor": 1,
    "no-useless-return": 1,
    "nonblock-statement-body-position": 0,
    "object-curly-newline": 0,
    "object-curly-spacing": 0,
    "object-shorthand": 1,
    "one-var": 1,
    "padded-blocks": 0,
    "prefer-arrow-callback": 0,
    "prefer-const": 1,
    "prefer-template": 1,
    "quotes": 1,
    "semi": 0,
    "space-before-blocks": 0,
    "space-before-function-paren": 0,
    "space-in-parens": 0,
    "space-infix-ops": 0
  }
}
