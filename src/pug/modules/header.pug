// HEADER
header.header#header

  // NAV CONTAINER
  nav.nav.container
    
    // NAV LOGO
    a.nav__logo(href="#home")
      i.bx.bxs-watch.nav__logo-icon
      |Rolex

    // NAV MENU
    .nav__menu#nav-menu
      ul.nav__list
        each link, i in navLinks
          li.nav__item
            if i === 0
              +navLink({ link, isActive: true })
            else
              +navLink({ link })

      // NAV CLOSE
      .nav__close#nav-close
        i.bx.bx-x

    // NAV BUTTONS
    .nav__btns
      .nav__shop#cart-shop
        .bx.bx-shopping-bag
      .nav__toggle#nav-toggle
        .bx.bx-grid-alt
